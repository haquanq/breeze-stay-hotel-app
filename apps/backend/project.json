{
  "name": "backend",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/backend/src",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "mvn clean package -f apps/backend/pom.xml"
      }
    },
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "docker compose -f apps/backend/docker-compose.yml -p hotel_db up -d",
          "mvn spring-boot:run -f apps/backend/pom.xml"
        ],
        "parallel": false
      }
    },
    "clean-install": {
      "executor": "nx:run-commands",
      "options": {
        "command": "mvn clean install -f apps/backend/pom.xml"
      }
    }
  },
  "implicitDependencies": ["backend"]
}
